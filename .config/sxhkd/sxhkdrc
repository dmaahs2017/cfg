### ----------------- ###
### Non-WM Hotkeys 
### ----------------- ###
# reload bspwm and sxhkd
super + comma; r
	pkill -USR1 -x sxhkd; \
    bspc wm -r

# lightdm switch users
super + q
    dm-tool switch-to-greeter

# terminal emulator
super + Return
	alacritty

# thunar
super + apostrophe
    thunar

# toggle polybar
super + p
    pgrep polybar && killall -q polybar || $HOME/.config/polybar/launch.sh

#program launcher
super + @space
	dmenu_run

# power off
super + shift + alt + q
    shutdown now

# suspend/hibernate/reboot
super + comma; super + {s,h,r}
    systemctl {suspend,hibernate,reboot}
    

# screenshot
ctrl + Print
    flameshot full -c && paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga
shift + Print
    flameshot full -p ~/Pictures && paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga
ctrl + shift + Print
    flameshot gui &&





### ----------------- ###
### WM Hotkeys     
### ----------------- ###

# rotate
super + {_,shift +}v
    bspc node first_ancestor --rotate {90,270}

# equalize
super + b
    bspc node @/ -E

# hide current node
super + m
    bspc node focused --flag hidden

# toggle desktop layout
super + {_,shift + }c
	bspc desktop -l {next,prev}

# close and kill
super + {_,shift + }z
	bspc node -{c,k}

# quit/restart bspwm
super + alt + q
	bspc quit

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + comma; m
    bspc node -g marked
super + comma; s
    bspc node -g sticky

# set the node flags
super + {_,shift +}m
	bspc node -g {marked,sticky}

# send the newest marked node to the newest preselected node
# swap with marked
super + y
	bsp-layout cycle --layout tall,wide,rgrid,even


# focus/move the prev window in the given desktop
super + {_,shift + }h
    bspc node -{f,s} prev.local.!hidden.window

# focus/move the next window in the given desktop
super + {_,shift + }l
    bspc node -{f,s} next.local.!hidden.window

# focus prev/next desktop
super + {k,j}
    bspc desktop -f {prev,next}

# move to next/prev desktop
super + shift + {k,j}
    bspc node -d {prev,next} --follow

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the node in the given direction
#super + {_,shift + }{h,j,k,l}
#    bspc node -{f,s} {west,south,north,east}

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on


# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}


