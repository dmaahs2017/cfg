### ----------------- ###
### Non-WM Hotkeys 
### ----------------- ###
# reload bspwm and sxhkd
super + comma; r
	pkill -USR1 -x sxhkd; \
    bspc wm -r

# terminal emulator
super + Return
	alacritty

# toggle polybar
super + p
    pgrep polybar && killall -q polybar || polybar bspwm &

# program launcher
super + @space
	dmenu_run



### ----------------- ###
### WM Hotkeys     
### ----------------- ###

# toggle desktop layout
super + {_,shift + }c
	bspc desktop -l {next,prev}

# close and kill
super + {_,shift + }z
	bspc node -{c,k}

# quit/restart bspwm
super + alt + q
	bspc quit

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + {_,shift +}m
	bspc node -g {marked,sticky}

# send the newest marked node to the newest preselected node
# swap with marked
super + y
	bspc node newest.marked.local -n newest.!automatic.local


# focus/move the prev window in the given desktop
super + {_,shift + }h
    bspc node -{f,s} prev.local.!hidden.window

# focus/move the next window in the given desktop
super + {_,shift + }l
    bspc node -{f,s} next.local.!hidden.window

# focus prev/next desktop
super + {k,j}
    bspc desktop -f {prev,next}

# move to next/prev desktop
super + shift + {h,l}
    bspc node -d {prev,next} --follow

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the node in the given direction
#super + {_,shift + }{h,j,k,l}
#    bspc node -{f,s} {west,south,north,east}

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on


# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}


