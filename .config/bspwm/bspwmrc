#! /bin/sh
bspc rule -r "*"

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d 1 Browsers Dev Games1 Games2

bspc config border_width         2
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

### ------------------------ ###
###        Rules             ###
### ------------------------ ###
# Default Rules
bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

### Steam and Steam Games
bspc rule -a Steam desktop='Games1' follow=on
# Timberborn
bspc rule -a steam_app_1062090 desktop='Games2' state=fullscreen follow=on
# Bomber Crew
bspc rule -a BomberCrew.x86_64 desktop='Games2' state=fullscreen follow=on

# Browsers
bspc rule -a "Brave-browser" desktop='Browsers'
bspc rule -a Chromium desktop='Browsers'
bspc rule -a "LibreWolf" desktop='Browsers'

### ------------------------ ###
###        End Rules         ###
### ------------------------ ###

# Launch Polybar
killall -q polybar
polybar bspwm &

# add walpaper
feh --bg-fill ~/Pictures/FirekeeperFull.jpg

# add compositor
killall -q picom
picom
